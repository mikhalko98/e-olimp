#include <iostream>

using namespace std;

int main()
{
    long n;
    cin>>n;
        if(n<3){
            if(n==0) cout<<1;
            if(n==1) cout<<2;
            if(n==2) cout<<4;
        return 0;
        }
        int a=1;
        int b=2;
        int c=4;
        long x;
        for(int i=3;i<=n;i++){
            x=a+b+c;
            a=b;
            b=c;
            c=x;
        }
        cout<<c;

    return 0;
}
